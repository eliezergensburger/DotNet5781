<Window x:Class="Targil3b_version2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Targil3b_version2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Button  x:Name="btnShowBus" Content="Button" HorizontalAlignment="Left" Margin="98,10,0,0" VerticalAlignment="Top" Width="75" Click="btnShowBus_Click"/>
        <ListBox x:Name="lbAllBuses" HorizontalAlignment="Left" Height="259" Margin="46,42.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="605" ItemsSource="{Binding}"/>
    </Grid>
</Window>
