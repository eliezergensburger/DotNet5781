<Window x:Class="Targil3b_Alef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Targil3b_Alef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lbbusses" Grid.Row="1" HorizontalAlignment="Left"   VerticalAlignment="Top" ItemsSource="{Binding}"/>
        <Button x:Name="btnAddbus" Content="הכנסת אוטובוס" HorizontalAlignment="Left" Margin="107,30,0,0" VerticalAlignment="Top" Width="99" Height="27" Click="addBus"/>

    </Grid>
</Window>
